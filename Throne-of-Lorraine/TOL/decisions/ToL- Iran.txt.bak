    #Revoke the Autonomy of the Kurdish Amirs
	revoke_kurdish_autonomy = {
	picture = kurdish_amirs
		potential = {
			tag = PER
			NOT = { has_country_flag = revoked_kurdish_autonomy }
			OR = {
				is_our_vassal = RDL
				is_our_vassal = MKN
				is_our_vassal = URM
				is_our_vassal = ZFN
			}
		}

		allow = {		 
			war = no
			OR = {
			    civilization_progress = 0.6
				civilized = yes
			}
		}

		effect = {
			set_country_flag = revoked_kurdish_autonomy
			prestige = 5
			any_country = {
				limit = {
					vassal_of = THIS
					OR = {
						primary_culture = kurdish
						tag = URM
					}
					ai = yes
				}
				annex_to = THIS
			}
			random_country = {
				limit = {
					vassal_of = THIS
					primary_culture = kurdish
					ai = no
				}
				PER = { release_vassal = THIS }
			}
			remove_core = RDL
			remove_core = MKN
			remove_core = URM
			remove_core = ZFN
			add_accepted_culture = kurdish
		}
		ai_will_do = { factor = 1 }
	}
	
