country_event = {
    id = 651933
    title = "EVTNAME651933" 
    desc = "EVTDESC651933"
    picture = "treaty"

    is_triggered_only = yes

    option = {
        name = "What a disgrace"
        prestige = -50
        THIS = {
            any_owned = {
                limit = {
                    continent = east_indies
                    is_core = FROM
                }
                secede_province = FROM
            }
        }
		any_country = {
			limit = { vassal_of = THIS }
			any_owned = {
                limit = {
                    continent = east_indies
                    is_core = FROM
                }
                secede_province = FROM
            }
		}
		any_country = {
			limit = { 
				vassal_of = THIS 
				OR = {
					primary_culture = malay
					primary_culture = javan
					primary_culture = asian_minor
					primary_culture = moluccan
					primary_culture = sumatran
					tag = SAK
				}
			}
			country_event = 651934
		}
        any_country = {
            limit = {
                alliance_with = FROM
                war_with = THIS
            }
            end_war = THIS
        }
    }
}

